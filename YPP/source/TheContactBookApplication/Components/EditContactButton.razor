
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@40,700,0,0" />

<div class="delete-contact-button" @onclick="OnEditContactButtonClick">
    <span class="material-symbols-outlined">
        edit
    </span>
</div>



@code {

    [Parameter]
    public EventCallback<bool> WantToEditChanged { get; set; }

    public bool WantToEdit { get; set; } = false;

    public void OnEditContactButtonClick()
    {
        WantToEdit = true;
        WantToEditChanged.InvokeAsync(WantToEdit);
    }
}