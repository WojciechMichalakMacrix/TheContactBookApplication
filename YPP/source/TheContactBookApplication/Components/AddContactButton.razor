
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,300,0,0" />

<div class="add-contact-container">
    <div class="add-contact-button" @onclick="OnAddContactButtonClick">
        <span class="material-symbols-outlined">
            add
        </span>
    </div>
</div>



@code {
    public bool WantToAdd { get; set; } = false;
    
    [Parameter]
    public EventCallback<bool> WantToAddChanged { get; set; }

    public void OnAddContactButtonClick()
    {
        WantToAdd = true;

        WantToAddChanged.InvokeAsync(WantToAdd);
    }
}
